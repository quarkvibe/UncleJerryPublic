# Production Environment Variables for Uncle Jerry Blueprint Analyzer

# API URL Configuration - REPLACE WITH YOUR ACTUAL DOMAIN
REACT_APP_API_URL=https://your-domain.com/api

# Feature Flags
REACT_APP_ENABLE_CLAUDE_INTEGRATION=true
REACT_APP_ENABLE_MOCK_API=false
REACT_APP_ENABLE_DEBUG_LOGS=false

# Content Settings
REACT_APP_MAX_UPLOAD_SIZE_MB=15
REACT_APP_SUPPORTED_FILE_TYPES=image/jpeg,image/png,image/tiff,application/pdf

# Cache and Performance
REACT_APP_API_TIMEOUT_MS=60000
REACT_APP_CACHE_DURATION_MIN=60

# Application Information
REACT_APP_VERSION=$npm_package_version
REACT_APP_BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')

# Analytics and Monitoring (Optional)
REACT_APP_ENABLE_ANALYTICS=true

# User Authentication (Placeholder - Configure in Backend)
REACT_APP_AUTH_DOMAIN=your-auth-domain
REACT_APP_AUTH_CLIENT_ID=your-client-id

# Content Security
REACT_APP_SECURE_UPLOADS=true

# Error Reports
REACT_APP_ERROR_REPORTING=true

# Build Optimization
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=true
REACT_APP_ENABLE_COMPRESSION=true
REACT_APP_ENABLE_PRELOAD=true